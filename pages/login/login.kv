#:import PageLogin pages.login.login

<PageLogin>:
    id: page_login
    name: "screen_login"
    email: email_input
    password: password_input

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        BoxLayout:
            orientation: "vertical"
            size_hint_y: .5
            spacing: 20

            MDTextFieldRound:
                id: email_input
                hint_text: "Email"
                size_hint_x: None
                width: root.width / 2
                pos_hint: {"center_x": .5}
                normal_color: 0,0,0,.40
                active_color: 0,0,0,.40
                icon_left: "email"
                icon_type: "left"

            MDTextFieldRound:
                id: password_input
                hint_text: "Password"
                password: True
                size_hint: .5, None
                pos_hint: {"center_x": .5}
                normal_color: 0,0,0,.40
                active_color: 0,0,0,.40
                icon_left: "lock"
                icon_type: "left"

            MDRaisedButton:
                text: "Loguearse"
                pos_hint: {"center_x": 0.5}
                on_release: root.login_user()